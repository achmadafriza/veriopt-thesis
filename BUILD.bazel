latex_document(
    name = "proposal",
    srcs = glob(
        [
            "proposal/**/*.tex", 
            "common/**/*.tex", 
            "common/**/*.png",
            "common/**/*.jpeg",
            "common/**/*.bib",
        ], 
    ) + TEX_DEPS,
    format = "pdf",
    cmd_flags = ["--bibtex-cmd=biber"],
    main = "proposal/proposal.tex",
)


latex_document(
    name = "thesis",
    srcs = glob(
        [
            "thesis/**/*.tex", 
            "common/**/*.tex", 
            "common/**/*.png",
            "common/**/*.jpeg",
            "common/**/*.bib",
        ], 
    ) + TEX_DEPS,
    format = "pdf",
    cmd_flags = ["--bibtex-cmd=biber"],
    main = "thesis/main.tex",
)
