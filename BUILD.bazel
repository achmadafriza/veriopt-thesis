load("@pypi//:requirements.bzl", "requirement")
load("@bazel_latex//:latex.bzl", "latex_document")

PY_DEPS = [
    requirement("loguru"),
    requirement("mypy"),
    requirement("pytest"),
]


py_binary(
    name = "main",
    srcs = glob(["src/**/*.py"]),
    deps = PY_DEPS,
)


